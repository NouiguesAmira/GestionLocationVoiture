<!DOCTYPE html>
<html>

    <head>
        <title>
            {% block title %}
                {{ 'GLDRA - Reservez une Voiture'|trans }}
            {% endblock %}
        </title>

        <meta content="text/html; charset=utf-8" http-equiv="Content-Type"/>

        {% block stylesheets %}{% endblock %}

        <script src="{{ asset('build/js/app.js') }}"></script>
        {% block javascripts %}{% endblock %}

        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('voiture.list') }}">{{ 'GLDRA'|trans }}</a>
                </div>
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('contact') }}">{{ 'Contact'|trans }}</a>
                </div>

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <div>
                                    <a href="{{ path('admin.marque.list') }}" class="btn btn-default navbar-btn">{{ 'Admin'|trans }}</a>
                                </div>
                            </li>
                        {% endif %}


                        {% if app.user %}
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}">{{ 'Logout'|trans }}</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>

</html>
